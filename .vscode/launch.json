{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to .NET Core Docker (Remote)",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "openglothub_api_1"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            },
        }
    ]
}
